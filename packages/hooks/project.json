{
  "$schema": "../../.yarn/unplugged/nx-virtual-fb1067bda3/node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/hooks/src",
  "targets": {
    "test": {
      "executor": "@nxrs/cargo:test",
      "options": {}
    },
    "lint": {
      "executor": "@nxrs/cargo:clippy",
      "options": {
        "fix": false,
        "failOnWarnings": true,
        "noDeps": true
      }
    },
    "semantic-release": {
      "executor": "@theunderscorer/nx-semantic-release:semantic-release",
      "options": {
        "plugins": [
          [
            "@semantic-release/exec",
            {
              "verifyReleaseCmd": "cargo check",
              "publishCmd": "cargo set-version ${nextRelease.version} && cargo check && cargo publish && echo '{\"name\":\"hooks ${nextRelease.version}\"}'",
              "execCwd": "packages/hooks"
            }
          ]
        ],
        "gitAssets": ["${PROJECT_DIR}/Cargo.toml", "Cargo.lock"],
        "github": true,
        "changelog": true,
        "npm": false,
        "tagFormat": "hooks-v${VERSION}"
      }
    }
  },
  "tags": []
}
